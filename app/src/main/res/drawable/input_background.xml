<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Light gray border -->
    <stroke
        android:width="2dp"
        android:color="#DDDDDD" />

    <!-- White background -->
    <solid android:color="@color/ebony_clay" />

    <!-- Some padding inside -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
